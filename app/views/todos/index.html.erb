<h1>To-Dos</h1>

<%= link_to "Create a new Todo", new_todo_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

  <% @todos.each do |todo| %>
    <tr>
      <td> <%= todo.name %> </td>
      <td> <%= todo.description %> </td>
      <td> <%= link_to "Edit", edit_todo_path(todo) %>
      <td> <%= link_to "Show", todo_path(todo) %>
      <td> <%= link_to "Delete", todo_path(todo), method: :delete, data: {confirm: "Are you sure?"} %>
    </tr>
  <% end %>
</table>
